                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Medium">
                                <ControlSizeDefinition ControlName="TOOL_PACKAGE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LOCA"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LSF"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_INDEX"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_SEARCH"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_SETTINGS"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_GAMEOBJECT"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Small">
                                <ControlSizeDefinition ControlName="TOOL_PACKAGE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LOCA"
                                                       ImageSize="Small"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LSF"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_INDEX"
                                                       ImageSize="Large"
