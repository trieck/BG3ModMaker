                                <Scale Group="GROUP_SHOW" Size="Large" />
                            </ScalingPolicy.IdealSizes>
                            <Scale Group="GROUP_SHOW" Size="Small" />
                        </ScalingPolicy>
                    </Tab.ScalingPolicy>

                    <Group CommandName="GROUP_SHOW">
                        <SizeDefinition>
                            <ControlNameMap>
                                <ControlNameDefinition Name="VIEW_STATUS_BAR" />
                                <ControlNameDefinition Name="VIEW_OUTPUT" />
                            </ControlNameMap>
