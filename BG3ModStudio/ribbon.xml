<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
    <Application.Commands>
        <Command Name="FILE_NEW" Symbol="ID_FILE_NEW" Id="0xE100" Keytip="O">
            <Command.LabelTitle>Create a New File...</Command.LabelTitle>
            <Command.TooltipTitle>Create a New File(Ctrl+N)</Command.TooltipTitle>
            <Command.TooltipDescription>Create a New File</Command.TooltipDescription>
        </Command>

        <Command Name="FILE_OPEN" Symbol="ID_FILE_OPEN" Id="0xE101" Keytip="O">
