            <Command.LabelTitle>Settings</Command.LabelTitle>
            <Command.TooltipTitle>Settings(Ctrl+Alt+S)</Command.TooltipTitle>
            <Command.TooltipDescription>Settings</Command.TooltipDescription>
        </Command>

        <Command Name="TOOL_GAMEOBJECT" Symbol="ID_TOOL_GAMEOBJECT" Id="133" Keytip="O">
            <Command.LabelTitle>Game Object Explorer...</Command.LabelTitle>
            <Command.TooltipTitle>Game Object Explorer</Command.TooltipTitle>
            <Command.TooltipDescription>Open Game Object Explorer</Command.TooltipDescription>
        </Command>

        <Command Name="APP_ABOUT" Symbol="ID_APP_ABOUT" Id="0xE140" Keytip="O">
            <Command.LabelTitle>About BG3 Mod Studio...</Command.LabelTitle>
            <Command.TooltipTitle>About BG3 Mod Studio(Ctrl+Shift+A)</Command.TooltipTitle>
            <Command.TooltipDescription>About BG3 Mod Studio</Command.TooltipDescription>
        </Command>

        <Command Name="VIEW_OUTPUT" Symbol="ID_VIEW_OUTPUT" Id="0xE802" Keytip="O">
            <Command.LabelTitle>Show the output window</Command.LabelTitle>
            <Command.TooltipTitle>Toggle the output window(Ctrl+Shift+O)</Command.TooltipTitle>
            <Command.TooltipDescription>Show or hide the output window</Command.TooltipDescription>
        </Command>

        <Command Name="VIEW_STATUS_BAR" Symbol="ID_VIEW_STATUS_BAR" Id="0xE801" />
        <Command Name="APP_EXIT" Symbol="ID_APP_EXIT" Id="0xE141" />

        <!-- Tabs -->
        <Command Name="TAB_HOME" Symbol="ID_TAB_HOME" LabelTitle="Home" />
        <Command Name="TAB_TOOLS" Symbol="ID_TAB_TOOLS" LabelTitle="Tools" />
        <Command Name="TAB_VIEW" Symbol="ID_TAB_VIEW" LabelTitle="View" />

        <!-- Groups -->
        <Command Name="GROUP_HOME" Symbol="ID_GROUP_HOME" LabelTitle="Home" />
        <Command Name="GROUP_TOOLS" Symbol="ID_GROUP_TOOLS" LabelTitle="Tools" />
        <Command Name="GROUP_SHOW" Symbol="ID_GROUP_SHOW" LabelTitle="Show or Hide" />
        <Command Name="GROUP_HELP" Symbol="ID_GROUP_HELP" LabelTitle="Help" />

        <!-- App Menu, Quick Access Toolbar -->
        <Command Name="AppMenu" Symbol="ID_RIBBON_APP_MENU" />
        <Command Name="QAT" Symbol="ID_RIBBON_QAT" />
    </Application.Commands>

    <Application.Views>
        <Ribbon>
            <!-- Application Menu -->
            <Ribbon.ApplicationMenu>
                <ApplicationMenu CommandName="AppMenu">
                    <MenuGroup Class="StandardItems">
                    </MenuGroup>
                    <MenuGroup>
                        <Button CommandName="FILE_NEW" />
                        <Button CommandName="FILE_OPEN" />
                        <Button CommandName="FILE_CLOSE" />
                        <Button CommandName="FILE_SAVE" />
                        <Button CommandName="FILE_SAVE_ALL" />
                    </MenuGroup>
                    <MenuGroup>
                        <Button CommandName="APP_ABOUT" />
                        <Button CommandName="APP_EXIT" />
                    </MenuGroup>
                </ApplicationMenu>
            </Ribbon.ApplicationMenu>

            <!-- QAT (Quick Access Toolbar) -->
            <Ribbon.QuickAccessToolbar>
                <QuickAccessToolbar CommandName="QAT">
                </QuickAccessToolbar>
            </Ribbon.QuickAccessToolbar>

            <Ribbon.Tabs>
                <Tab CommandName="TAB_HOME">
                    <Tab.ScalingPolicy>
                        <ScalingPolicy>
                            <ScalingPolicy.IdealSizes>
                                <Scale Group="GROUP_HOME" Size="Large" />
                            </ScalingPolicy.IdealSizes>
                            <Scale Group="GROUP_HOME" Size="Small" />
                        </ScalingPolicy>
                    </Tab.ScalingPolicy>

                    <Group CommandName="GROUP_HOME">
                        <SizeDefinition>
                            <ControlNameMap>
                                <ControlNameDefinition Name="FILE_NEW" />
                                <ControlNameDefinition Name="FILE_OPEN" />
                                <ControlNameDefinition Name="FILE_CLOSE" />
                                <ControlNameDefinition Name="FILE_SAVE" />
                                <ControlNameDefinition Name="FILE_SAVE_ALL" />
                            </ControlNameMap>
                            <GroupSizeDefinition Size="Large">
                                <ControlSizeDefinition ControlName="FILE_NEW"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_OPEN"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_CLOSE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE_ALL"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Medium">
                                <ControlSizeDefinition ControlName="FILE_NEW"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_OPEN"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_CLOSE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE_ALL"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                            </GroupSizeDefinition>
                            <GroupSizeDefinition Size="Small">
                                <ControlSizeDefinition ControlName="FILE_NEW"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_OPEN"
                                                       ImageSize="Small"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_CLOSE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE"
                                                       ImageSize="Small"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="FILE_SAVE_ALL"
                                                       ImageSize="Small"
                                                       IsLabelVisible="true" />
                            </GroupSizeDefinition>
                        </SizeDefinition>
                        <Button CommandName="FILE_NEW" />
                        <Button CommandName="FILE_OPEN" />
                        <Button CommandName="FILE_CLOSE" />
                        <Button CommandName="FILE_SAVE" />
                        <Button CommandName="FILE_SAVE_ALL" />
                    </Group>
                </Tab>

                <Tab CommandName="TAB_TOOLS">
                    <Group CommandName="GROUP_TOOLS">
                        <SizeDefinition>
                            <ControlNameMap>
                                <ControlNameDefinition Name="TOOL_PACKAGE" />
                                <ControlNameDefinition Name="TOOL_LOCA" />
                                <ControlNameDefinition Name="TOOL_LSF" />
                                <ControlNameDefinition Name="TOOL_INDEX" />
                                <ControlNameDefinition Name="TOOL_SEARCH" />
                                <ControlNameDefinition Name="TOOL_SETTINGS" />
                                <ControlNameDefinition Name="TOOL_GAMEOBJECT" />
                            </ControlNameMap>
                            <GroupSizeDefinition Size="Large">
                                <ControlSizeDefinition ControlName="TOOL_PACKAGE"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LOCA"
                                                       ImageSize="Large"
                                                       IsLabelVisible="true" />
                                <ControlSizeDefinition ControlName="TOOL_LSF"
